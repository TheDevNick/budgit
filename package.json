{
  "name": "budgit",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "watch": "tsc --watch",
    "backend": "node --watch build/index.js",
    "dev:backend": "concurrently \"pnpm run watch\" \"pnpm run backend\"",
    "dev:frontend": "pnpm --prefix ./frontend start",
    "check-types": "tsc",
    "prettier": "prettier --write .",
    "build:backend": "tsc",
    "build:frontend": "pnpm --prefix ./frontend run build",
    "build": "tsc && pnpm run build:frontend"
  },
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.40.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  }
}